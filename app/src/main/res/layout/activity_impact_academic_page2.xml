        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inadequate math skills?"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/mathSkillsRadioGroup"
        android:layout_width="395dp"
