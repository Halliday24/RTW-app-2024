        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surveyPage4_Option2"
        android:layout_marginLeft="10dp">

        <RadioButton
