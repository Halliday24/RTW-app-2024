            android:layout_marginRight="35dp"/>

        <RadioButton
            android:id="@+id/halfRadioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"/>

        <RadioButton
            android:id="@+id/mostRadioButton3"
