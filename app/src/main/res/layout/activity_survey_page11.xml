<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/digitalWhite"
    tools:context=".SurveyPage11">

    <ImageView
        android:id="@+id/TopGreenBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/Green"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/BottomGreenBar"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="700dp"
        android:layout_marginBottom="6dp"
        android:background="@color/Green" />

    <Button
        android:id="@+id/hint"
        android:layout_width="69dp"
        android:layout_height="52dp"
        android:layout_alignTop="@id/TopGreenBar"
        android:layout_alignEnd="@id/TopGreenBar"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="679dp"
        android:backgroundTint="@color/Green"
        android:onClick="openHint"
        android:text=" ? "
        android:textColor="@color/Yellow"
        android:textSize="20dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TopGreenBar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Why are you here at U of A? Choose all that apply:"
        android:textStyle="bold" />

    <!-- Group 1: Checkboxes -->

    <!-- Group 2: Checkboxes -->
    <CheckBox
        android:id="@+id/degreeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionText"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="36dp"
        android:text="To get a degree" />

    <CheckBox
        android:id="@+id/helpOthersCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionText"
        android:layout_marginStart="79dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:layout_toEndOf="@+id/degreeCheckBox"
        android:text="To help others" />

    <CheckBox
        android:id="@+id/getJobCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/degreeCheckBox"
        android:layout_alignStart="@id/degreeCheckBox"
        android:layout_marginStart="3dp"
        android:layout_marginTop="9dp"
        android:text="To get a job I like" />

    <!-- Group 3: Checkboxes -->
    <CheckBox
        android:id="@+id/supportFamilyCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/getJobCheckBox"
        android:layout_alignStart="@id/getJobCheckBox"
        android:layout_marginStart="3dp"
        android:layout_marginTop="7dp"
        android:text="To support my family" />

    <CheckBox
        android:id="@+id/lifeGoalCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/supportFamilyCheckBox"
        android:layout_alignStart="@id/supportFamilyCheckBox"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="12dp"
        android:text="To accomplish a life goal" />

    <!-- Group 4: Checkboxes -->

    <CheckBox
        android:id="@+id/differenceCheckBox"
        android:layout_width="108dp"
        android:layout_height="35dp"

        android:layout_below="@id/lifeGoalCheckBox"
        android:layout_alignStart="@id/lifeGoalCheckBox"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:text="To make a difference in the world" />

    <CheckBox
        android:id="@+id/learnCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/differenceCheckBox"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-205dp"
        android:layout_marginEnd="78dp"
        android:text="To learn" />

    <!-- Other Views -->

    <CheckBox
        android:id="@+id/unsureCheckBox"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_below="@id/learnCheckBox"
        android:layout_alignEnd="@id/learnCheckBox"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="-3dp"

        android:text="Unsure" />

    <EditText
        android:id="@+id/otherReasonEditText"
        android:layout_width="305dp"
        android:layout_height="66dp"

        android:layout_below="@id/unsureCheckBox"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="14dp"
        android:hint="Specify other reason"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/otherReasonEditText"
        android:layout_marginTop="12dp"
        android:text="What do you want to gain from or contribute to society during your lifetime?"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/gainEditText"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="36dp"
        android:hint="Answer"
        android:textColorHint="@color/black"
        android:layout_below="@id/textView5" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gainEditText"
        android:layout_alignStart="@id/gainEditText"
        android:layout_marginStart="44dp"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/Yellow"
        android:text="Back"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gainEditText"
        android:layout_alignEnd="@id/gainEditText"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/Yellow"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/otherCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/unsureCheckBox"
        android:layout_alignStart="@id/unsureCheckBox"
        android:layout_marginStart="-230dp"
        android:layout_marginTop="146dp"
        android:text="Other:" />

</RelativeLayout>
